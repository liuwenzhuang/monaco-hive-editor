{
  "name": "monaco-hive-editor",
  "packageManager": "yarn@3.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "test": "yarn workspace @lwz/hive-editor-test",
    "editor": "yarn workspace @lwz/hive-editor",
    "parser": "yarn workspace @lwz/hive-parser",
    "meta": "yarn workspace @lwz/hive-meta-data",
    "prettier:packages": "prettier --write \"packages/*/src/**/*.{ts,js}\"",
    "lint:packages": "eslint --fix \"packages/*/src/**/*.{ts,js}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unused-imports": "^1.1.3",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2"
  }
}
